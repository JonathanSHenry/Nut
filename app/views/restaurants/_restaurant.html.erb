<li>
  <%= link_to restaurant.name, restaurant %>
  <span class="description"><%= restaurant.description %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(restaurant.created_at) %> ago.
  </span>
</li>

  
  <% if current_user.admin? %>
    <%= link_to "Delete", restaurant, method: :delete,
                                  data: { confirm: "Are you sure you want to delete this restaurant?" } %>
  <% end %>
</li>